<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="login_tittle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">50dp</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textColor">@color/lavender</item>
    </style>

    <style name="EditTextLoginRoundedCorners">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_edittext_background</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="ProfilePicCircular">
        <item name="android:background">@drawable/round_corners_pic</item>
    </style>

    <style name="login_btn">
        <item name="android:text">Login</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textSize">15dp</item>
        <item name="android:background">@drawable/rectangular_button</item>
        <item name="android:textColor">@color/dark_purple</item>
    </style>

</resources>